<body style="background-color: #ffffff">

<center>


  <h1 style="font-weight: bold; font-size: 3em; color: #0d6efd">Tasks</h1><br/>
  <div id="tasks">
    <% @tasks.each do |task| %>


      <% if task.user == current_user %>

        <div class="card text-center" style="width: 18rem; display: inline-block; border-radius: 1em; box-shadow: rgba(3, 102, 214, 0.3) 0px 0px 0px 3px; margin: 0.6em">
          <div class="card-body" >

            <h5 style="font-weight: bold; font-size: 1.5em; margin-bottom: 0.8em; color:#ED004A"><%= task.task_name%></h5>
            <div><h6 style="mso-ansi-font-weight: bold; margin: 0.8em; color:#454555">Start date</h6><%=task.start_date%></div>
            <div><h6 style="mso-ansi-font-weight: bold; margin: 0.8em; color:#454555">End date</h6><%=task.end_date %></div>
            <div><h6 style="mso-ansi-font-weight: bold; margin: 0.8em; color:#454555">Notes</h6><%=task.notes %></div>

            <p style="margin-top: 0.9em">
              <%= link_to "Show this task", task , class:"btn btn-light", style: "color:#0d6efd; background-color: #ffffff; font-weight: bold; box-shadow: rgba(0, 0, 0, 0.06) 0px 2px 4px 0px inset;"%>
            </p>

          </div>
        </div>

      <% end %>

    <% end %>
  </div>

  <br/>
  <%= link_to "New task", new_task_path, class:"btn btn-primary" %>


</center>

</body>





<body>

<center>


  <h2 style="color: #0d6efd; font-size: 3em; font-weight: bold; padding-bottom: 0.5em">Edit Profile</h2>

  <div class="card text-center" style="height: 32em; padding: 1em 2em 1em; width: 32em; border-radius: 2em; margin: 1em; box-shadow: rgba(17, 12, 46, 0.15) 0px 48px 100px 0px;">
    <div class="card-body">
      <h5 class="card-title" style="margin-bottom: 1.5em; color: #ED004A; font-size: 1.6em; font-weight: bold">Welcome <%= resource_name.to_s.humanize %></h5>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3 row">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", style:"border-radius: 1em; padding-bottom:0.5em" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="mb-3 row">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "new-password", style:"border-radius: 1em; padding-bottom:0.5em", placeholder:"Leave it blank if you don't want to change it" %>
        </div>

        <div class="mb-3 row">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", style:"border-radius: 1em; padding-bottom:0.5em" %>
        </div>

        <div class="mb-3 row">
          <%= f.label :current_password %><br />
          <%= f.password_field :current_password, autocomplete: "current-password", style:"border-radius: 1em; padding-bottom:0.5em", placeholder:"Your current password is needed!"%>
        </div>

        <div style="padding-bottom: 1em;">
          <%= f.submit "Update", class:"btn btn-light", style: "width: 12em; background-color:#ED004A; color:#ffffff; padding:0.5em; border-radius:0.5em; margin:0.5em;"%>
        </div>
      <% end %>
    </div>
  </div>


  <br/><br/><br/><br/>
  <h3 style="margin-bottom: 1em; color: #ED004A; font-size: 3em; font-weight: bold">Unhappy?</h3>

  <div><%= button_to "Delete My Account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger",style: "width: 12em; background-color:#0d6efd; color:#ffffff; border-radius:0.5em; padding:0.5em; margin:0.5em; box-shadow: rgba(17, 12, 46, 0.15) 0px 48px 100px 0px;" %></div>

  <%= link_to "Back", :back, class:"btn btn-light", style:"font-weight:bold; width:12em;" %>

  <br/><br/><br/><br/><br/>
</center>

</body>